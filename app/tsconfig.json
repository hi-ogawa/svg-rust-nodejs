{
  "include": ["src"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build/tsc",
    "module": "commonjs",
    "target": "es2021",
    "lib": ["es2021"],
    "types": [],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  }
}
